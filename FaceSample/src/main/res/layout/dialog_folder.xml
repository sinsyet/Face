<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_round_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="500dp">

        <TextView
            android:textSize="26sp"
            android:gravity="center"
            android:text="选择文件夹"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp">
            <LinearLayout
                android:id="@+id/folder_ll_pathGuide"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </LinearLayout>
        </HorizontalScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/folder_rl"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:textSize="16sp"
                    android:textColor="@color/selector_selected_btn"
                    android:id="@+id/folder_tv_ok"
                    android:text="OK"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorAccent"
                    android:id="@+id/folder_tv_cancle"
                    android:text="CANCLE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toLeftOf="@id/folder_tv_ok"
                    android:layout_marginRight="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ListView
                android:layout_above="@id/folder_rl"
                android:id="@+id/folder_lv"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>